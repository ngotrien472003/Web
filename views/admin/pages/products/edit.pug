extends ../../layouts/default.pug
include ../../mixins/alert
block main 
    h2 Trang chỉnh sửa sản phẩm
    - if(messages.error)
        +alert-error(5000)
    - if(messages.success)
        +alert-success(5000)
    form(
        action=`/${prefixAdmin}/products/edit/${id}?_method=PATCH`
        id="form-create-product"
        enctype="multipart/form-data"
        method="POST"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=item.title
                required
            )
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                type="text"
                class="form-control"
                id="desc"
                name="description"
                rows="5"
            ) #{item.description}
        div(class="form-group")
            label(for="price") Giá
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value=item.price
                min="0"
            )
        div(class="form-group")
            label(for="discount") Giảm giá
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value=item.discountPercentage
                min="0"
            )
        div(class="form-group")
            label(for="stock") Số lượng
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value=item.stock
                min="0"
            )
        div(class="form-group" block-preview)
            label(for="thumbnail") Ảnh
            input(
                type="file" 
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                inp-preview
                accept="image/*"
            )
            img(
                src=item.thumbnail, 
                class="image-preview"
                img-preview
                )
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                value=item.position
                placeholder ="Tự động tăng"
                min="1"
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(item.status=="active" ? true : false)
            )
            label(for="statusActive") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(item.status=="inactive" ? true : false)
            )
            label(for="statusInActive") Dừng hoạt động 
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
        
        
        


